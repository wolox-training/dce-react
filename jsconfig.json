{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "paths": {
      "~app/*": [
        "app/*"
      ],
      "~components/*": [
        "app/components/*"
      ],
      "~screens/*": [
        "app/screens/*"
      ],
      "~hooks/*": [
        "app/hooks/*"
      ],
      "~assets/*": [
        "app/assets/*"
      ],
      "~config/*": [
        "config/*"
      ]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    ".history"
  ]
}
